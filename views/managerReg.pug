doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
  title ZaWasher - Manager Registration
  style.
    nav.navbar {
    border-bottom: solid 1px #05183E;
    }

// Navigation bar
nav#navbar.navbar.navbar-expand-md.navbar-light.py-3.mx-4
  .container-fluid
    a.navbar-brand(href='/')
      span.fw-bold.fst-italic(style='color: #05183E;')
        | ZaWash Bay.
    // toogle button for mobile nax
    button.navbar-toggler.d-md-none(type='button' data-bs-toggle='collapse' data-bs-target='#mainNav' aria-controls='mainNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    // nav bar links
    #mainNav.collapse.navbar-collapse.justify-content-end.align-center(style='color: #05183E;')
      ul.navbar-nav
        li.nav-item.d-md-none
          a.nav-link(href='/') Sign In
        //button on the nav bar
        li.nav-item.ms-2.d-none.d-md-inline
          a.btn.btn-outline-secondary(href='/') Sign In

section
  .container-fluid
    .row.g-3.justify-content-center.align-items-center.pt-4.pb-5
      .col-md-8
        .container-lg 
          .row.justify-content-center.align-items-center
            .col-md-6.text-center.d-none.d-md-block
              img(src = '/styles/registerToon.png' alt = 'Registration in progress')

            //form container
            .form-wrapper.col-md-6
              .text-center.border-bottom.mb-3
                header
                  h2.car.fst-italic.display-6.text-secondary Manager Registration
              //manager registration form
              form#ManagerRegister.row.g-3(action='/manager' method='POST' onsubmit='return validateManager(event)')
                .form-floating
                  input#managerFirstname.form-control(type='text' placeholder='First Name' name='managerFirstname')
                  label.form-label(for='firstname') First Name
                  small#errorFirstName
                .form-floating
                  input#managerSurname.form-control(type='text' placeholder='Surname' name='managerSurname')
                  label.form-label(for='surname') Surname
                  small#errorSurName
                .form-floating
                  input#managerUsername.form-control(type='text' placeholder='Username' name='managerUsername')
                  label.form-label(for='username') Username
                  small#errorUsername
                .form-floating
                  input#managerPassword.form-control(type='password' placeholder='Password' name='managerPassword')
                  label.form-label(for='password') Password
                  small#errorPassword
                .d-grid
                  button#submit.btn.btn-secondary(type='submit' href="/")
                    | Register

