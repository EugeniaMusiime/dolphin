head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
  title ZaWasher - Washer Registration
  style.
    nav.navbar {
    border-bottom: solid 1px #05183E;
    }
// Navigation bar
nav#navbar.navbar.navbar-expand-md.navbar-light.py-3.mx-4
  .container-fluid
    a.navbar-brand(href='#')
      span.fw-bold.fst-italic.navHead(style='color: #05183E;')
        | ZaWash Bay
    // toogle button for mobile nax
    button.navbar-toggler.d-md-none(type='button' data-bs-toggle='collapse' data-bs-target='#mainNav' aria-controls='mainNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    // nav bar links
    #mainNav.collapse.navbar-collapse.justify-content-end.align-center(style='color: #05183E;')
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/home') Home
        li.nav-item
          a.nav-link(href='/car') Car Registration
        li.nav-item
          a.nav-link.active(href='/washer' aria-current='page')
            | Washer
            | Registration
        li.nav-item.d-md-none
          a.nav-link(href='/') Sign Out
        li.nav-item.ms-2.d-none.d-md-inline
          a.btn.btn-outline-secondary(href='/') Sign Out
          
section
  .container-fluid
    .row.g-3.justify-content-center.align-items-center.py-4
      .col-md-7
        .text-center.border-bottom.mb-3
          header
            h2.washer.fst-italic.display-5 Kanaabe Registration
        .form-wrapper
          form#washerRegister.row.g-3(action='/washer' method='POST' onsubmit='return validateWasher(event)')
            .form-floating.col-md-12
              input#fullName.form-control(type='text' placeholder='Full Name' name='fullname')
              label.form-label(for='fullName') Full Name
              small#errorFullName
            .col-md-6
              label.form-label(for='birthDate') Date of Birth
              input#birthDate.form-control(type='date' name='dob')
              small#errorBirthDate
            .col-md-6
              label.form-label(for='inputGender') Gender?
              select#inputGender.form-select(name='gender')
                option(selected='' value='Choose:') Choose:
                option(value='Female') F
                option(value='Male') M
              small#errorGender
            .form-floating.col-md-12
              input#NIN.form-control(type='text' placeholder='National ID Number(NIN)' name='nin')
              label.form-label(for='NIN') National ID Number(NIN)
              small#errorNIN
            .form-floating.col-md-6
              input#residence.form-control(type='text' placeholder='Place of Residence' name='residence')
              label.form-label(for='residence') Place of Residence
              small#errorResidence
            .form-floating.col-md-6
              input#employeeId.form-control(type='text' placeholder='Employee ID' name='employeeid')
              label.form-label(for='employeeId') Employee ID
              small#errorEmployeeId
            .d-grid
              button#submit.btn.btn-outline-secondary(type='submit')
                | Register
